{
  "build": {
    "preview": {
      "android": {
        "gradleCommand": ":app:assembleRelease"
      }
    },
    "production": {
      "android": {
        "gradleCommand": ":app:assembleRelease",
        "env": {
          "NODE_OPTIONS": "--max-old-space-size=8192",
          "JAVA_OPTS": "-Xms512m -Xmx8192m -Dfile.encoding=UTF-8"
        }
      }
    }
  }
}
